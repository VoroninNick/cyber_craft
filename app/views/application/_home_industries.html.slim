section#wehelp.industries.content-part data-title=("Industries we help")
  /! Slider
  ul.industrieswehelp
    - items.each do |item|
      /! Slide
      li
        .container
          .row
            .col-md-6.col-sm-6.col-xs-12.p_tex.ter_im.home-industries-banner-image-div style="background-image: url('#{item.index_logo.url(:home_logo)}');"
              img.full-height alt="alt" src=item.index_logo.url(:home_logo)
              h3.section_h3.ins_h3
                a.with_orange_arrows href=industries_path
                  | Industries
                  |&nbsp;
                  span.chos_sbg
                    |we help
            .col-md-6.col-sm-6.col-xs-12.p_ot.home-industries-description-column
              h3.et_zah
                span
                  = item.name
              p
                = item.short_description
              a.uz.home-industries-learn-more href=industry_path(item)
                | Learn more


  /! End Slider
  /! Pagination on slider
  .row.ind_cent
    .col-md-6.col-sm-6.col-xs-12
      div
        .industriewwepager
          /! End Pagination on slider
          /! End Industries we help